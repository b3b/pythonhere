# Common settings

#:import hex kivy.utils.get_color_from_hex
#:import sp kivy.metrics.sp

#:set bg_color "#EEEEEE"
#:set pallete ["#646464", "#306998", "#4B8BBE", "#FFD43B", "#FFE873"]
#:set tc lambda text, index: f"[color={pallete[index]}]{text}[/color]"


<Widget>:
    canvas.before:
        Color:
            rgba: hex(bg_color)
        Rectangle:
            pos: self.pos
            size: self.size

<Label>:
    font_size: "30sp"
    font_name: "DejaVuSans"
    color: hex(pallete[1])
    markup: True

<TextInput>:
    foreground_color: hex(pallete[1])

<Popup>:
    title_color: pallete[1]

<SettingTitleHere>:
    text_size: self.width - 32, None
    size_hint_y: None
    height: max(dp(20), self.texture_size[1] + dp(20))
    color: pallete[1]
    font_size: '18sp'

    canvas.before:
        Color:
            rgba: hex(pallete[4])[:3] + [.05]
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: .2, .2, .2
        Rectangle:
            pos: self.x, self.y - 2
            size: self.width, 1
